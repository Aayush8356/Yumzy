# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/webfood
POSTGRES_URL=postgresql://username:password@localhost:5432/webfood

# Demo Data Control
# Set to 'true' to seed demo users and notifications during database seeding
# Set to 'false' or omit to have a clean database without demo data
SEED_DEMO_DATA=false

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Production Database URLs (when using cloud providers)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Optional: Redis for caching and sessions
REDIS_URL=redis://localhost:6379

# Socket.IO Configuration
SOCKET_PORT=3001

# Email Configuration (for production notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Unsplash API Keys (for food images)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key

# Razorpay Payment Configuration
NEXT_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret-key
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-here

# JWT Secret for authentication (production)
JWT_SECRET=your-super-secret-jwt-key-here

# Node Environment
NODE_ENV=development